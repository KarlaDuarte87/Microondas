@model List<Programas>
@{
    ViewData["Title"] = "Programas";
}

@if(TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-info" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemSucesso"]
    </div>

}




@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger" role="alert">
        <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
        @TempData["MensagemErro"]
    </div>

}


<br>


<div class="text-center">
    <p class="h1">Todos programas</p>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Código</th>
                <th scope="col">Nome</th>
                <th scope="col">Comida</th>
                <th scope="col">Tempo</th>
                <th scope="col">Potência</th>
                <th scope="col">Caractere</th>
                <th scope="col">Instruções</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (Programas programa in Model)
                {
                <tr>
                    <th scope="row">@programa.Id</th>
                    <td>@programa.Nome</td>
                    <td>@programa.Comida</td>
                    <td>@programa.TempoEmSegundos</td>
                    <td>@programa.Potencia</td>
                    <td>@programa.CaracterDeAquecimento</td>
                    <td>@programa.Instrucoes</td>

                    <td>
                        <div class="d-grid gap-2 d-md-block">
                            <a class="btn btn-warning" role="button" asp-route-id="@programa.Id" asp-controller="Home" asp-action="EditarPrograma">Editar</a>
                            <a class="btn btn-danger role="button" asp-route-id="@programa.Id" asp-controller="Home" asp-action="ApagarConfirmacao">Apagar</a>
                </tr>

                }
            }
                
        </tbody>
    </table>
    <a class="btn btn-secondary" role="button" asp-controller="Home" asp-action="Index">Voltar</a>

</div>

